<!DOCTYPE html>
<html lang="en">

<head>
    <title>Training</title>
    <title></title>
    <%- include('./layout/head'); %>
        <%- include('./layout/header'); %>
</head>

<body>
    <div class="container mt-3 mb-3">
        <div class=" border rounded">
            <h4 class="text-center m-4" style="font-family: Arial, Helvetica, sans-serif;">UPLOAD DATA IMAGE</h4>
            <form id="form_upload" action="/api/update-dataset" method="post" enctype="multipart/form-data">
                <div class="d-flex">
                    <label class="form-label m-2" for="">DataSet</label>
                    <input class="form-control m-1" type="file" name="dataset" id="" accept=".zip">
                    <input class="btn btn-primary m-1" type="submit" name="" id="" value="Upload">
                </div>
            </form>
            <h4 class="text-center m-4" style="font-family: Arial, Helvetica, sans-serif;">CREATE FILE TRAINING</h4>
            <form id="form_create_dataset" action="" method="post">
                <div class="">
                    <div class="row">
                        <div class="col-md-3">
                            <label class="form-label m-2" for="">DataImage</label>
                            <select id="list-file" name="dataset" class="form-select form-select-lg"></select>
                            <label class="form-label m-2" for="">Path</label>
                            <input class="form-control m-1" type="text" name="path" id="">
                            <label class="form-label m-2" for="">Train</label>
                            <input class="form-control m-1" type="text" name="train" id="">
                            <label class="form-label m-2" for="">Val</label>
                            <input class="form-control m-1" type="text" name="val" id="">
                            <!-- <label class="form-label m-2" for="">Number Object</label>
                                    <input class="form-control m-1" type="number" name="nc" value="0" id=""> -->
                        </div>
                        <div class="col-md-9">
                            <label class="form-label m-2" for="">Name</label>
                            <textArea name="names" id="names" class="form-control" style="resize: none;"
                                rows="12">['person', 'bicycle']</textArea>
                        </div>
                    </div>
                    <input class="btn btn-primary m-1" type="submit" name="" id="" value="Create">
                </div>
            </form>
            <h4 class="text-center m-4" style="font-family: Arial, Helvetica, sans-serif;">TRAINING</h4>
            <form id="form_Train" action="" method="post">
                <div class="row mt-2 mb-2">
                    <div class="col-md form-floating">
                        <input class="form-control" type="number" value="320" name="img" id="">
                        <label class="form-label" for="">Image Size</label>
                    </div>
                    <div class="col-md form-floating">
                        <input class="form-control" type="number" value="1" name="batch" id="">
                        <label class="form-label" for="">Batch Size</label>
                    </div>
                    <div class="col-md form-floating">
                        <input class="form-control" type="number" value="1" name="epoch" id="">
                        <label class="form-label" for="">Epoch</label>
                    </div>
                    <div class="col-md form-floating">
                        <select id="list-dataset" name="data" class="form-select form-select-lg"></select>
                        <label class="form-label" for="">DataSet</label>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button id="btn_train" class="btn btn-primary" disabled>
                        <span class="spinner-border spinner-border-sm"></span>
                        Training..
                    </button>
                </div>
            </form>
        </div>

        <div class="border rounded mt-5">
            <h4 class="text-center m-4" style="font-family: Arial, Helvetica, sans-serif;">UPLOAD DATA CSV</h4>
            <form action="/neural/csv_datas" method="post" class="" encType="multipart/form-data" id="form-upload-csv">
                <div class="d-flex">
                    <label class="form-label m-2" for="">DataSet</label>
                    <input class="form-control m-1" type="file" name="myfile" id="myfile"
                        accept=".csv, application/vnd.ms-excel">
                    <input class="btn btn-primary m-1" type="submit" name="" id="" value="Upload">
                </div>
            </form>
            <h4 class="text-center m-4" style="font-family: Arial, Helvetica, sans-serif;">CONFIG TRAINIG</h4>
            <form id="config_model" action="/neural/config_model" method="post" class="">
                <div class="">
                    <label class="form-label m-2" for="">Data</label>
                    <select id="list_csv" name="filename" class="form-select form-select-lg"></select>
                    <label class="form-label m-2" for="">Input</label>
                    <select id="list_input" name="featureHeader" class="form-select form-select-lg" multiple></select>
                    <label class="form-label m-2" for="">Output</label>
                    <select id="list_Output" name="outputHeader" class="form-select form-select-lg"></select>
                    <input style="display: none;" type="text" name="outputCount" id="outputCount">
                    <div class="d-flex justify-content-center">
                        <input class="btn btn-primary m-1" type="submit" name="" id="" value="Config">
                    </div>
                </div>
            </form>
            <h4 class="text-center m-4" style="font-family: Arial, Helvetica, sans-serif;">TRAINIG CSV</h4>
            <form id="train_model" action="/neural/train_model" method="post" class="">
                <div class="row mt-2 mb-2">
                    <div class="col-md form-floating">
                        <input class="form-control" type="number" value="0.001" name="learningRate" id="">
                        <label class="form-label" for="">Learning Rate</label>
                    </div>
                    <div class="col-md form-floating">
                        <input class="form-control" type="number" value="32" name="batchSize" id="">
                        <label class="form-label" for="">Batch Size</label>
                    </div>
                    <div class="col-md form-floating">
                        <input class="form-control" type="number" value="20" name="epoch" id="">
                        <label class="form-label" for="">Epoch</label>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button id="btn_train_csv" class="btn btn-primary">
                        Training
                    </button>
                </div>
            </form>
            <div>

            </div>
        </div>
        <div class=" mt-3">
            <a id="export" style="display: none;" class="btn btn-primary">export</a>
            <figure class="highcharts-figure">
    
                <div id="container"></div>
            </figure>
            <textArea id="console" class="form-control" rows="5" style="resize: none;" disabled></textArea>
        </div>
    </div>
</body>
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/series-label.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>
<script src="socket.io/socket.io.js"></script>
<script src="js/training.js"></script>
<footer>
    <%- include('./layout/footer');%>
</footer>

</html>